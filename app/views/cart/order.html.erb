        const price = priceCell ? priceCell.textContent.trim() : '';

        // Lấy tổng tiền sản phẩm
        const totalPriceCell = productRow.querySelector("#tongtien");
        const totalPrice = totalPriceCell ? totalPriceCell.textContent.trim() : '';

